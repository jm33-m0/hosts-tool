<Window x:Class="hosts_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hosts_tool"
        mc:Ignorable="d"
        Title="Hosts-Tool   -- by jm33" Height="250" Width="330"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Height="221" VerticalAlignment="Top">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="64" Margin="22,40,0,0" TextWrapping="Wrap" Text="https://raw.githubusercontent.com/racaljk/hosts/master/hosts" VerticalAlignment="Top" Width="262"/>
        <Label x:Name="label" Content="Hosts源：" HorizontalAlignment="Left" Margin="22,9,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="更新本地hosts" HorizontalAlignment="Left" Margin="22,142,0,0" VerticalAlignment="Top" Width="85" Click="button_Click"/>
        <Button x:Name="button1" Content="退出" HorizontalAlignment="Left" Margin="201,142,0,0" VerticalAlignment="Top" Width="83" Click="button1_Click"/>
        <StatusBar HorizontalAlignment="Left" Height="23" Margin="0,188,0,0" VerticalAlignment="Top" Width="324">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Ready" Width="314"/>
        </StatusBar>

    </Grid>
</Window>
